{
  "name": "@dragbin/crypto",
  "version": "1.0.0",
  "description": "Zero-dependency encryption library using Kyber post-quantum cryptography and Argon2id password hashing",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "node scripts/extract-wasm.js",
    "build": "npm run prepare && tsc && rollup -c",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "encryption",
    "kyber",
    "argon2",
    "post-quantum",
    "cryptography",
    "file-encryption",
    "zero-knowledge"
  ],
  "author": "Dragbin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dragbin/dragbin-crypto"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.10.5",
    "hash-wasm": "^4.11.0",
    "kyber-crystals": "^1.0.7",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
